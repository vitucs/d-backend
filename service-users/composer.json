{
    "name": "d-backend/service-users",
    "type": "project",
    "keywords": [
        "php",
        "swoole",
        "framework",
        "hyperf",
        "microservice"
    ],
    "description": "Microsserviço de gerenciamento de usuários.",
    "license": "Apache-2.0",
    "require": {
        "php": ">=8.1",
        "hyperf/cache": "~3.1.0",
        "hyperf/command": "^3.1",
        "hyperf/config": "^3.1",
        "hyperf/database": "^3.1",
        "hyperf/db-connection": "^3.1",
        "hyperf/di": "^3.1",
        "hyperf/framework": "~3.1.0",
        "hyperf/guzzle": "~3.1.0",
        "hyperf/http-server": "~3.1.0",
        "hyperf/logger": "~3.1.0",
        "hyperf/model-cache": "~3.1.0",
        "hyperf/utils": "^3.1",
        "hyperf/validation": "~3.1.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "hyperf/devtool": "^3.1",
        "hyperf/testing": "^3.1",
        "mockery/mockery": "^1.0",
        "pestphp/pest": "^2.36",
        "phpstan/phpstan": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "HyperfTest\\": "test/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "scripts": {
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-autoload-dump": [
            "rm -rf runtime/container"
        ],
        "start": "php ./bin/hyperf.php start",
        "pest": "pest --colors=always",
        "test": "co-phpunit -c phpunit.xml --colors=always",
        "cs-fix": "php-cs-fixer fix $1",
        "analyse": "phpstan analyse --memory-limit 300M"
    }
}
